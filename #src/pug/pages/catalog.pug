extends ../layouts/app_layout
append link 
	link(rel="stylesheet" type="text/css" href="@@webRoot/css/catalog.min.css")
prepend script
	script(defer="defer" type="text/javascript" src="@@webRoot/js/catalog.min.js") 
	block title
	- var text='Каталог - Те Ткани "Обнинск"'
	
block page-content
	.page#page
		._container
			include ../chunk/modal-regisrations-fiz
			include ../chunk/modal-regisrations-ure
			aside._sidebar-catalog 
				.sidebar-search.bp-4
					._top.bp-2
						button(type="button")._icon-cancel
							+iconfont('cancel-circle', 'icon')
			nav._sidebar-menu
				include ../chunk/sidebar-menu
			section._header
				include ../layouts/header
			._content
				section._bread-crumbs
					nav.bread-crumbs
						ul._list
							li
								a._link(href="@@webRoot/index.html" title="/ Главная") Главная / 
							li
								span._item Каталог
				section._categories
					include ../components/section-categories
				section._new-products
					include ../components/section-new-products
			section._footer
				include ../layouts/footer 
			nav._buttom-menu
				include ../layouts/float-menu