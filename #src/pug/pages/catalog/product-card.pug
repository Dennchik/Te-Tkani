extends ../../layouts/app_layout
append link 
	link(rel="stylesheet" type="text/css" href="@@webRoot/css/product-card.min.css")
prepend script
	script(defer="defer" type="text/javascript" src="@@webRoot/js/product-card.min.js") 
	block title
	- var text='Карточка товара - Те Ткани "Обнинск"'

block main-content
	section.page__bread-crumbs
		nav.bread-crumbs
			ul._list
				li
					a._link(href="@@webRoot/index.html" title="/ Главная") Главная /
				li
					a._link._lnb(href="@@webRoot/catalog.html" title="/ Главная") Каталог /
				li
					a._link._lnb(href="@@webRoot/catalog.html" title="/ Главная") Раздел 1 /
				li
					span._item Карточка товара
	section.page__product-card 
		include ../../components/section-product-card
	section.page__row-card#watch-recently
		include ../../components/section-watchrecently-slide
	section.page__row-card#similar-products
		include ../../components/section-similar-products

